{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "outDir": "./dist/esm",
    "rootDir": "./src/Editor",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "sourceMap": false,
    "declarationMap": false,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/Editor"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}