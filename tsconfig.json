{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "outDir": "./dist/esm",
    "lib": [],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/App/**/*",
    "src/documents/**/*",
    "src/index.tsx",
    "src/theme.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}